# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:8000/api

# App Origin (for generating event booking links)
NEXT_PUBLIC_APP_ORIGIN=http://localhost:3000

# Google OAuth Client ID (for sign in)
# Get this from: https://console.cloud.google.com/apis/credentials
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id_here

# Microsoft OAuth (for sign in)
# Get this from: https://portal.azure.com/#view/Microsoft_AAD_RegisteredApps/ApplicationsListBlade
NEXT_PUBLIC_MS_CLIENT_ID=your_microsoft_client_id_here
NEXT_PUBLIC_MS_REDIRECT_URI=http://localhost:3000/auth/microsoft/callback

# JWT Secret (must match backend JWT_SECRET)
# Used to verify JWT tokens from OAuth login
JWT_SECRET=your_jwt_secret_here

# Supabase Configuration
# Get these from: https://supabase.com/dashboard/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
# Optional: Only needed if using Supabase client-side features
SUPABASE_ANON_KEY=your_anon_key_here

# OpenAI API Key
# Get this from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
